{
  "name": "cursor-directory-structure-ts",
  "version": "1.0.0",
  "description": "A TypeScript tool for monitoring and analyzing project directory structures, with a focus on Cursor IDE integration",
  "main": "dist/directory-structure.js",
  "scripts": {
    "build": "tsc",
    "start": "tsx src/directory-structure.ts",
    "setup": "tsx src/setup.ts",
    "test": "tsx --test tests/*.test.ts",
    "test:watch": "tsx --test --watch tests/*.test.ts",
    "test:coverage": "tsx --test --experimental-test-coverage tests/*.test.ts"
  },
  "keywords": [
    "cursor",
    "directory",
    "structure",
    "typescript",
    "analysis",
    "monitoring"
  ],
  "author": "drumnation",
  "license": "ISC",
  "devDependencies": {
    "@types/luxon": "^3.4.2",
    "@types/node": "^20.11.16",
    "@types/unzipper": "^0.10.9",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "chokidar": "^3.5.3",
    "dotenv": "^16.4.1",
    "luxon": "^3.4.4",
    "unzipper": "^0.10.14"
  }
}
